<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_all_80dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/textView_MainToolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans_dn_bold"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_MainToolbar_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_MainToolbar_back" />

    <ImageView
        android:id="@+id/imageView_MainToolbar_back"
        android:layout_width="@dimen/width_all_35dp"
        android:layout_height="@dimen/height_all_35dp"
        android:layout_marginLeft="@dimen/margin_all_16dp"
        android:layout_marginTop="@dimen/margin_all_16dp"
        android:layout_marginBottom="@dimen/margin_all_16dp"
        android:padding="@dimen/padding_all_6dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>