<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/progressLayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:clickable="true"
    android:focusable="true">

    <ProgressBar
        android:id="@+id/progressLayout_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimaryAccent"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/progressLayout_title"
        app:layout_constraintLeft_toLeftOf="@+id/progressLayout_title"
        app:layout_constraintRight_toRightOf="@+id/progressLayout_title" />

    <TextView
        android:id="@+id/progressLayout_title"
        android:layout_width="@dimen/width_all_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_all_50dp"
        android:fontFamily="@font/iran_sans_dn_regular"
        android:gravity="center"
        android:text="@string/progressLayout_pleaseWait"
        android:textColor="@color/colorPrimaryAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>