<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_userMediaItem_profile"
        android:layout_width="@dimen/dimension_all_50dp"
        android:layout_height="@dimen/dimension_all_50dp"
        android:layout_marginLeft="@dimen/margin_all_20dp"
        android:layout_marginTop="@dimen/margin_all_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_userMediaItem_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_all_20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_userMediaItem_profile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_userMediaItem_profile" />

    <TextView
        android:id="@+id/textView_userMediaItem_topUserName"
        android:layout_width="@dimen/width_all_0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_all_20dp"
        android:layout_marginRight="@dimen/margin_all_20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_all_16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_userMediaItem_profile"
        app:layout_constraintLeft_toRightOf="@id/imageView_userMediaItem_profile"
        app:layout_constraintRight_toLeftOf="@+id/imageView_userMediaItem_more"
        app:layout_constraintTop_toTopOf="@id/imageView_userMediaItem_profile" />

    <ImageView
        android:id="@+id/imageView_userMediaItem_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_all_0dp"
        android:layout_marginTop="@dimen/margin_all_10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@+id/imageView_userMediaItem_profile" />

    <TextView
        android:id="@+id/textView_userMediaItem_bottomUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_all_20dp"
        android:layout_marginTop="@dimen/margin_all_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_all_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_userMediaItem_image" />

    <TextView
        android:id="@+id/textView_userMediaItem_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_all_20dp"
        android:layout_marginTop="@dimen/margin_all_10dp"
        android:layout_marginRight="@dimen/margin_all_20dp"
        android:layout_marginBottom="@dimen/margin_all_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_userMediaItem_bottomUserName"
        app:layout_constraintVertical_bias="@integer/constraintVerticalBias_0" />
</androidx.constraintlayout.widget.ConstraintLayout>